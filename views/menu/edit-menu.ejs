    <form method="POST" action="/menus/edit/<%= data.id %>">
        <div class="form-group">
            <label for="name">Nama Menu:</label>
            <input value="<%= data.name %>" type="text" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="price">Harga Menu:</label>
            <input value="<%= data.price %>" type="text" class="form-control" name="price" id="price">
        </div>
        <div class="form-group">
            <label for="sel1">Jenis:</label>
            <select class="form-control" name="jenis" id="sel1">
                <option value="makanan" <% if(data.jenis === 'makanan'){%> selected <% } else { %> <% } %> >makanan</option>
                <option value="minuman" <% if(data.jenis === 'minuman'){%> selected <% } else { %> <% } %> >minuman</option>
            </select>
        </div>
              
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

